<%= @question.votes.sum(:count) %>

<%= form_for(@vote) do |v| %>
  <%= v.hidden_field(:voteable_type, value: 'Question') %>
  <%= v.hidden_field(:count,         value: 1) %>
  <%= v.hidden_field(:voteable_id,   value: @question.id) %>
  <%= v.submit 'Vote up' %>
<% end %>

<%= form_for(@vote) do |v| %>
  <%= v.hidden_field(:voteable_type, value: 'Question') %>
  <%= v.hidden_field(:count,         value: -1) %>
  <%= v.hidden_field(:voteable_id, value: @question.id) %>
  <%= v.submit 'Vote down' %>
<% end %>
